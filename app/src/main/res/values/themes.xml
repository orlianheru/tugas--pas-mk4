<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TugasKelompok" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/cream</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent
        </item> <!-- Transparent background -->
        <item name="android:textColorHint">@color/black</item> <!-- Hint text color -->
        <item name="android:textColor">@color/black</item> <!-- Query text color -->
        <item name="searchIcon">@drawable/baseline_search_24
        </item> <!-- Custom black search icon -->
    </style>

    <style name="Theme.TugasKelompok" parent="Base.Theme.TugasKelompok" />
</resources>